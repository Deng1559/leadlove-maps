# =================================================================
# LeadLove Maps Credit System - Environment Configuration
# =================================================================

# -----------------------------------------------------------------
# Supabase Configuration
# -----------------------------------------------------------------
# Get these from your Supabase project dashboard
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# -----------------------------------------------------------------
# Stripe Configuration
# -----------------------------------------------------------------
# Payment processing (use test keys for development)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Subscription and credit pricing IDs
STRIPE_PRICE_GROWTH_MONTHLY=price_...
STRIPE_PRICE_ENTERPRISE_MONTHLY=price_...
NEXT_PUBLIC_STRIPE_PRICE_STARTER_MONTHLY=price_...
NEXT_PUBLIC_STRIPE_PRICE_GROWTH_MONTHLY=price_...
NEXT_PUBLIC_STRIPE_PRICE_ENTERPRISE_MONTHLY=price_...
NEXT_PUBLIC_STRIPE_PRICE_CREDITS_50=price_...
NEXT_PUBLIC_STRIPE_PRICE_CREDITS_200=price_...

# -----------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------
# Base URL for your application
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Private API key for Telegram integration (generate a secure random string)
LEADLOVE_PRIVATE_API_KEY=your_secure_private_key

# -----------------------------------------------------------------
# LeadLove Maps Integration
# -----------------------------------------------------------------
# URL of the LeadLove Maps API service
LEADLOVE_MAPS_API_URL=https://leadlove-maps.lovable.app

# API key for authenticating with LeadLove Maps service
LEADLOVE_MAPS_API_KEY=your_leadlove_api_key

# -----------------------------------------------------------------
# Development/Testing
# -----------------------------------------------------------------
# Node environment
NODE_ENV=development

# Playwright testing
PLAYWRIGHT_BASE_URL=http://localhost:3000