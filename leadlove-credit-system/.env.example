# =================================================================
# LeadLove Maps Credit System - Environment Configuration
# =================================================================

# -----------------------------------------------------------------
# Supabase Configuration
# -----------------------------------------------------------------
# Get these from your Supabase project dashboard
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# -----------------------------------------------------------------
# Stripe Configuration
# -----------------------------------------------------------------
# Payment processing (use test keys for development)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Subscription and credit pricing IDs
STRIPE_PRICE_GROWTH_MONTHLY=price_...
STRIPE_PRICE_ENTERPRISE_MONTHLY=price_...
NEXT_PUBLIC_STRIPE_PRICE_STARTER_MONTHLY=price_...
NEXT_PUBLIC_STRIPE_PRICE_GROWTH_MONTHLY=price_...
NEXT_PUBLIC_STRIPE_PRICE_ENTERPRISE_MONTHLY=price_...
NEXT_PUBLIC_STRIPE_PRICE_CREDITS_50=price_...
NEXT_PUBLIC_STRIPE_PRICE_CREDITS_200=price_...

# -----------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------
# Base URL for your application
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Private API key for Telegram integration (generate a secure random string)
LEADLOVE_PRIVATE_API_KEY=your_secure_private_key

# -----------------------------------------------------------------
# LeadLove Maps Integration
# -----------------------------------------------------------------
# URL of the LeadLove Maps API service
LEADLOVE_MAPS_API_URL=https://leadlove-maps.lovable.app

# API key for authenticating with LeadLove Maps service
LEADLOVE_MAPS_API_KEY=your_leadlove_api_key

# -----------------------------------------------------------------
# OpenAI Configuration
# -----------------------------------------------------------------
# OpenAI API key for AI-powered email generation
OPENAI_API_KEY=sk-...

# OpenAI model configuration (optional, defaults to gpt-4o-mini)
OPENAI_MODEL=gpt-4o-mini
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7

# -----------------------------------------------------------------
# Google Services Integration (Phase 2)
# -----------------------------------------------------------------
# Google Drive folder ID for CSV backups
GOOGLE_DRIVE_FOLDER_ID=your_google_drive_folder_id

# Google service account credentials (base64 encoded JSON)
GOOGLE_SERVICE_ACCOUNT_JSON=your_base64_encoded_service_account_json

# Google Sheets ID for lead data export
GOOGLE_SHEETS_ID=your_google_sheets_id

# -----------------------------------------------------------------
# Snov.io Integration (Phase 3)
# -----------------------------------------------------------------
# Snov.io API credentials for email verification and campaign management
SNOV_API_KEY=your_snovaio_api_key
SNOV_CLIENT_ID=your_snov_client_id
SNOV_CLIENT_SECRET=your_snov_client_secret

# Snov.io API base URL (usually https://api.snov.io)
SNOV_API_URL=https://api.snov.io

# -----------------------------------------------------------------
# Data Enrichment Configuration (Phase 2)
# -----------------------------------------------------------------
# Maximum concurrent enrichment requests
ENRICHMENT_MAX_CONCURRENT=5

# Timeout for domain checking requests (in milliseconds)
DOMAIN_CHECK_TIMEOUT=5000

# Google Places API key for enhanced business data
GOOGLE_PLACES_API_KEY=your_google_places_api_key

# -----------------------------------------------------------------
# Security Configuration
# -----------------------------------------------------------------
# Encryption key for user API keys (CHANGE IN PRODUCTION!)
API_KEY_ENCRYPTION_SECRET=your-super-secret-encryption-key-change-in-production

# Admin email addresses (comma-separated)
ADMIN_EMAILS=admin@yourcompany.com,security@yourcompany.com

# Rate limiting and security
MAX_LOGIN_ATTEMPTS=5
SECURITY_AUDIT_RETENTION_DAYS=90

# -----------------------------------------------------------------
# Development/Testing
# -----------------------------------------------------------------
# Node environment
NODE_ENV=development

# Playwright testing
PLAYWRIGHT_BASE_URL=http://localhost:3000