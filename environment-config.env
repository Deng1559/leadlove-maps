# LeadLove Maps Environment Configuration
# Copy this file to .env and fill in your actual credentials

# =============================================================================
# N8N CONFIGURATION
# =============================================================================
N8N_WEBHOOK_URL=https://your-n8n-instance.com/webhook
N8N_API_KEY=your-n8n-api-key

# =============================================================================
# TELEGRAM BOT CONFIGURATION
# =============================================================================
# Create bot with @BotFather: https://t.me/botfather
TELEGRAM_BOT_TOKEN=your-telegram-bot-token

# =============================================================================
# APIFY CONFIGURATION
# =============================================================================
# Get token from: https://console.apify.com/settings/integrations
APIFY_TOKEN=your-apify-token

# =============================================================================
# OPENAI CONFIGURATION  
# =============================================================================
# Get API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4o-mini
OPENAI_MAX_TOKENS=2000

# =============================================================================
# GOOGLE SHEETS CONFIGURATION
# =============================================================================
# Create OAuth2 credentials in Google Cloud Console
# Enable Google Sheets API
GOOGLE_SHEETS_CREDENTIALS=your-google-oauth2-credentials

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
# Lovable app URL
FRONTEND_URL=https://leadlove-maps.lovable.app
CORS_ORIGIN=https://leadlove-maps.lovable.app

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================
# Choose deployment platform
DEPLOYMENT_PLATFORM=vercel
# DEPLOYMENT_PLATFORM=railway

# Vercel configuration
VERCEL_PROJECT_NAME=leadlove-maps
VERCEL_DOMAIN=leadlove-maps.vercel.app

# Railway configuration  
RAILWAY_PROJECT_NAME=leadlove-maps
RAILWAY_DOMAIN=leadlove-maps.railway.app

# =============================================================================
# MONITORING & ANALYTICS
# =============================================================================
# Optional: Analytics tracking
GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID
MIXPANEL_TOKEN=your-mixpanel-token

# Optional: Error tracking
SENTRY_DSN=your-sentry-dsn

# Optional: Monitoring
HEALTH_CHECK_URL=https://your-monitoring-service.com/health

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================
# API timeouts (milliseconds)
API_TIMEOUT=30000
APIFY_TIMEOUT=120000
OPENAI_TIMEOUT=60000

# Rate limiting
MAX_REQUESTS_PER_MINUTE=60
MAX_CONCURRENT_WORKFLOWS=5

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================
# Development mode settings
NODE_ENV=production
DEBUG=false
LOG_LEVEL=info

# Local development URLs
LOCAL_N8N_URL=http://localhost:5678
LOCAL_FRONTEND_URL=http://localhost:3000

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# API security
API_SECRET_KEY=your-secret-key-for-webhook-validation
WEBHOOK_SIGNATURE_SECRET=your-webhook-signature-secret

# CORS settings
CORS_MAX_AGE=86400
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With

# =============================================================================
# DATABASE CONFIGURATION (if applicable)
# =============================================================================
# Optional: If using database for caching/storage
# DATABASE_URL=postgresql://user:pass@host:port/db
# REDIS_URL=redis://host:port

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================
# Google Sheets backup settings
BACKUP_FREQUENCY=daily
BACKUP_RETENTION_DAYS=30
BACKUP_NOTIFICATION_EMAIL=your-email@domain.com